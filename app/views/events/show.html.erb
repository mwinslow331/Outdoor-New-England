<div class="show-page">
  <h1><%= @event.name %></h1>
    <div class="event-trip">
      <div class="trip-image">
        <img src="<%= @event.image %>" style="width:304px;height:228px;">
      </div>
      <% if current_user %>
        <div class="sign-up">
          <button type="button" class="button">Join Event</button>
        </div>
      <% else %>
      <% end %>
        <div class="event-items">
          <% @event.essential_items.each do |item| %>
            <%= item.item_name %>
          <% end %>
        </div>
    </div>
</div>
